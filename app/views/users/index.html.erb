<main>
 <p id="notice"></p>
 <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %> 
      <table class="table">
        <tbody>
         <tr>
          <th>name</th>
	         <th><%= @user.name %></th>
         </tr>
          <tr>
          <th>introduction</th>
	         <th><%= @user.introduction %></th>
          </tr>
         </tbody>
       </table>
<div class="row">
  <a class="btn btn-outline-secondary btn-block fas fa-user-cog edit_user_24330" href="/users/show/edit"></a>
</div>

      
<h2 class="mt-3">New book</h2>
 <% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生しました
 <% @book.errors.full_messages.each do |message| %>
 <%= message %>
 <% end %>
 <% end %>

<%= form_with model: @book, local:true do |f| %>
 <h4>Title</h4>
  <%= f.text_field :title %></br>
 <h4>Opinion</h4>
  <%= f.text_area :body %>
 <%= f.submit "Create Book", class: "btn btn-primary col-xs-12" %>
  <% end %>
</div>


<div class="col-md-8 offset-md-1">
 <h2>Users</h2>
 <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td> <%= attachment_image_tag user, :profile_image, :fill, 60, 60 %></td>
        <td><%= user.name %></td>
        <td><%= link_to "Show", user_path(user) %></td>
      </tr>
    <% end %>
   </tbody>
  </table>
 </div>
</main>














