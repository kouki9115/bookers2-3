<main>
 <p id="notice"></p>
  <div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">

<h2>User info</h2>
<%= form_with model:@user, local:true do |f| %>
  <div><label for="inputName">Name</label>
  <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%></div>
  
  <div><label for="inputImage">Image</label>
  <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>  </div>
  
  <div><label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction, autofocus: true, id:"inputintroduction" %></div>
  
  <%= f.submit "Update User" %>
<% end %>

</div></main>
      
   
  

</body>