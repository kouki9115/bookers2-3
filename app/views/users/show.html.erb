<h1>Users#show</h1>



<main>
<h1>user info</h1>



<h1>New book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%=form_with model:@book,local:true do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

<h4>Opinion</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
 
<% end %>


<h1>Books</h1>

<table>
 <thead>
  <tr>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>

  <tbody>
  <% @books.each do |book| %>
   <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
   </tr>
  <% end %>
  </tbody>
</table>

</main>

<footer>
  <div class="container mt-5">
